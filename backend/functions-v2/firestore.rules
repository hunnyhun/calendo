rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Helper functions
    function isAuthenticated() {
      return request.auth != null;
    }
    
    function isOwner(userId) {
      return isAuthenticated() && request.auth.uid == userId;
    }
    
    function isAdmin() {
      return isAuthenticated() && request.auth.token.admin == true;
    }
    
    // Allow Cloud Functions to access all data
    match /{document=**} {
      allow read, write: if request.auth != null && request.auth.token.firebase.sign_in_provider == 'google.com';
    }
    
    // Users collection
    match /users/{userId} {
      allow read: if isOwner(userId);
      allow write: if isOwner(userId);
      
      // User's conversations
      match /conversations/{conversationId} {
        allow read, write: if isOwner(userId);
      }
      
      // User's daily quotes
      match /dailyQuotes/{quoteId} {
        allow read: if isOwner(userId);
        allow write: if isOwner(userId) || isAdmin();
      }
      
      // User's devices
      match /devices/{deviceId} {
        allow read: if isOwner(userId);
        allow write: if isOwner(userId);
      }
      
      // User's habits
      match /habits/{habitId} {
        allow read, write, delete: if isOwner(userId);
      }
      
      // User's habit entries
      match /habitEntries/{entryId} {
        allow read, write, delete: if isOwner(userId);
      }
      
      // User's tasks
      match /tasks/{taskId} {
        allow read, write, delete: if isOwner(userId);
      }
    }
    
    // Customers collection (for RevenueCat)
    match /customers/{userId} {
      allow read: if isOwner(userId);
      allow write: if isOwner(userId) || isAdmin();
    }
  }
}